extends layout

block content
  .container.mt-5
    h2.text-center Editar informaci√≥n
    form(method="POST" action="/perfil/editar" enctype="multipart/form-data" class="mt-4")
      .mb-3
        label.form-label(for="nombre") Nombre
        input.form-control(type="text" name="nombre" id="nombre" required value=nombre)
      .mb-3
        label.form-label(for="apellido_paterno") Apellido paterno
        input.form-control(type="text" name="apellido_paterno" id="apellido_paterno" required value=apellido_paterno)
      .mb-3
        label.form-label(for="apellido_materno") Apellido materno
        input.form-control(type="text" name="apellido_materno" id="apellido_materno" required value=apellido_materno)
      .mb-3
        label.form-label(for="carrera") Carrera
        input.form-control(type="text" name="carrera" id="carrera" required value=carrera)
      .mb-3
        label.form-label(for="credencial") Cambiar credencial escolar (opcional)
        input.form-control(type="file" name="credencial" id="credencial" accept="image/*,application/pdf")
      button.btn.btn-success(type="submit") Guardar cambios
      a.btn.btn-secondary.ms-2(href="/perfil") Cancelar
