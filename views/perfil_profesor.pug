extends layout

block content
  .container-xl.mt-5
    .row.justify-content-center
      .col-12.col-lg-8
        .card.shadow-sm
          .card-header.bg-primary.text-white.text-center.fw-bold Perfil de Profesor
          .card-body
            h4.mb-3 #{nombre} #{apellido_paterno} #{apellido_materno}
            p.mb-1
              strong Correo institucional:
              |  #{correo}
            p.mb-1
              strong Carrera:
              |  #{carrera}
            p.mb-1
              strong Credencial escolar:
            if credencial
              if credencial.endsWith('.pdf')
                a(href=`/credenciales/${credencial}` target="_blank")
                  i.bi.bi-file-earmark-pdf.text-danger.me-2
                  | Ver credencial (PDF)
              else
                img(src=`/credenciales/${credencial}` alt="Credencial" class="img-fluid rounded" style="max-width:300px;")
            else
              span.text-muted No se ha subido credencial.
            br
            a.btn.btn-primary.mt-3(href="/perfil/editar") Editar informaci√≥n
