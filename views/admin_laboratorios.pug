extends layout

block content
  .container.mt-5
    h2.text-center Dashboard Administrador

    // Sección de laboratorios (simulada)
    if laboratorios && laboratorios.length
      .row.mt-4
        each lab in laboratorios
          .col-md-4.mb-4
            .card.shadow-sm
              .card-body
                h5.card-title #{lab.nombre}
                p.card-text Ubicación: #{lab.ubicacion}
                a.btn.btn-info(href=`/admin/laboratorios/${lab.id}/inventario`) Inventario
    else
      .alert.alert-info.mt-4 No hay laboratorios registrados aún.
    a.btn.btn-success.mb-4(href="/admin/laboratorios/nuevo") Agregar laboratorio
