extends layout

block content
  .container.mt-5
    h2.text-center Perfil de Estudiante
    .card.mb-4
      .card-body
        h4 Datos del estudiante
        p
          b Nombre:
          | #{nombre} #{apellido_paterno} #{apellido_materno}
        p
          b Correo:
          | #{correo}
        p
          b Carrera:
          | #{carrera}
        p
          b Credencial:
          if credencial
            a(href=`/credenciales/${credencial}` target="_blank") Ver credencial
          else
            | No disponible
    h4.mt-4 Historial de eventos
    a.btn.btn-outline-primary.mb-3(href="/historial-alumno") Ver historial de eventos
    .alert.alert-info Esta sección mostrará los eventos y solicitudes gestionados por el estudiante.
    a.btn.btn-primary.mt-3(href="/perfil/editar") Editar información
